<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="refresh" content="15">
    <title>Staff Dashboard</title>
    <link rel="stylesheet" href="/css/staffDashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
</head>
<body>
    <header>
        <h1>Staff Dashboard</h1>
    </header>
    <div>
        <a href="/staff/HomePage">Staff Home Page</a>
        <a href="/logout"> Log Out</a>
    </div>
    
    
    <main>
        <section class="orders">
            <h2>Orders</h2>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <strong>Table <%= order.table %></strong> - <%= order.item %> - <%= order.status %>
                        <form action="/staff/Dashboard/update-order" method="POST">
                            <input type="hidden" name="orderId" value="<%= order.id %>">
                            <select name="status">
                                <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                <option value="In Progress" <%= order.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                                <option value="Served" <%= order.status === 'Served' ? 'selected' : '' %>>Served</option>
                            </select>
                            <button type="submit">Update</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>

        <!-- Removed Available Tables, Allocated Tables, Reservations Needing Allocation sections as per request -->
        
        <section class="inventory">
            <h2>Low Stock Alerts</h2>
            <ul>
                <% inventory.forEach(item => { %>
                    <li><%= item.name %> - <strong><%= item.quantity %> left</strong></li>
                <% }) %>
            </ul>
        </section>
        
        <section class="charts">
            <h2>Performance Analytics</h2>
            <div class="charts-container">
                <div class="chart-wrapper">
                    <canvas id="ordersChart"></canvas>
                </div>
                <div class="chart-wrapper">
                    <canvas id="inventoryChart"></canvas>
                </div>
            </div>
        </section>
    </main>
    <script>
        // Prepare data for charts
        const ordersData = <%- JSON.stringify(ordersData || []) %>;
        const inventoryData = <%- JSON.stringify(inventoryData || []) %>;

        // Extract labels and values for orders chart
        const orderLabels = ordersData.map(data => data.label);
        const orderValues = ordersData.map(data => data.value);

        // Extract labels and values for inventory chart
        const inventoryLabels = inventoryData.map(data => data.label);
        const inventoryValues = inventoryData.map(data => data.value);

        // Create orders chart
        const ctxOrders = document.getElementById('ordersChart').getContext('2d');
        new Chart(ctxOrders, {
            type: 'bar',
            data: {
                labels: orderLabels,
                datasets: [{
                    label: 'Orders',
                    data: orderValues,
                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    hoverBackgroundColor: 'rgba(54, 162, 235, 1)',
                    hoverBorderColor: 'rgba(54, 162, 235, 1)',
                    borderRadius: 5,
                    barPercentage: 0.6
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Orders Performance',
                        font: {
                            size: 18,
                            weight: 'bold'
                        }
                    },
                    tooltip: {
                        enabled: true,
                        backgroundColor: 'rgba(0,0,0,0.7)',
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 12 }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        precision: 0,
                        grid: {
                            color: '#e0e0e0'
                        },
                        ticks: {
                            font: {
                                size: 12
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            }
        });

        // Create inventory chart
        const ctxInventory = document.getElementById('inventoryChart').getContext('2d');
        new Chart(ctxInventory, {
            type: 'bar',
            data: {
                labels: inventoryLabels,
                datasets: [{
                    label: 'Inventory',
                    data: inventoryValues,
                    backgroundColor: 'rgba(255, 99, 132, 0.8)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    hoverBackgroundColor: 'rgba(255, 99, 132, 1)',
                    hoverBorderColor: 'rgba(255, 99, 132, 1)',
                    borderRadius: 5,
                    barPercentage: 0.6
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Inventory Levels',
                        font: {
                            size: 18,
                            weight: 'bold'
                        }
                    },
                    tooltip: {
                        enabled: true,
                        backgroundColor: 'rgba(0,0,0,0.7)',
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 12 }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        precision: 0,
                        grid: {
                            color: '#e0e0e0'
                        },
                        ticks: {
                            font: {
                                size: 12
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            }
        });
    </script>
    <script src="/js/staffDashboard.js"></script>
</body>
</html>
