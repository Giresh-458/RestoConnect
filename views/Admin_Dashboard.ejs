<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin_dashboard_styles.css">
</head>
<body>

<div class="dashboard"> 

    <nav class="sidebar">
        <ul>
            <li><a href="#">Revenue</a></li>
            <li><a href="#stats">Users Statistics</a></li>
            <li><a href="#restlist">Restaurants</a></li>
            <li><a href="#profile">Profile</a></li>
            <li class="logout"><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <main class="content">
        <section class="profile" id="profile">
            <h2>adam</h2>
            <p>Administrator</p>
            <p>adam@gmail.com</p>
        </section> 

        <section class="stats" id="stats">
            <div class="stat-box">
                <h6>Active Users</h6>
                <div class="stat-number"><h1><%= active_user_count %></h1></div>
            </div>
            <div class="stat-box">
                <h6>Total Users</h6>
                <div class="stat-number"><h1><%= total_user_count %></h1></div>
            </div>
        </section>

        <section class="restaurant-list" id="restlist">

            <% restaurants_list.forEach(restaurent => { %>
                <div class="restaurant-card">
                    <div><strong>Name:</strong> <%= restaurent.name %></div>
                    <div><strong>Location:</strong> <%= restaurent.location %></div>
                    <div><strong>Payment:</strong> <%= restaurent.amount %></div>
                    <div><strong>Joined:</strong> <%= restaurent.date %></div>
                </div>
            <% }) %>
        </section>

        

        <section class="form-section">
            <form action="/admin/add_restaurant" method="POST">
                <label>Name:</label>
                <input type="text" name="name" required>

                <label>Location:</label>
                <input type="text" name="location" required>

                <label>Payment Amount:</label>
                <input type="number" name="amount" required>

                <label>Date Joined:</label>
                <input type="date" name="date" required>

                <button type="submit">Submit</button>
            </form>
        </section>
    </main>

</div>

<script src="/js/admin_dash_script.js"></script>

</body>
</html>
