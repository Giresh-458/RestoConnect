<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin_dashboard_styles.css" />
  </head>
  <body>
    <header class="topnav">
      <div class="logo">RESTO <span style="color: orange">CONNECT</span></div>
      <nav>
        <a href="#">Home</a>
        <a href="#restlist">Restaurants</a>
        <a href="#stats">User Statistics</a>
        <a href="#revenue">Revenue</a>
        <a href="/logout">LogOut</a>
      </nav>
    </header>

    <main>
      <section class="profile-section">
        <div class="profile-card">
          <div class="profile-pic"></div>
          <div class="profile-info" id="profileDisplay">
            <p><strong>Name:</strong> <%= current_admin ? current_admin.username : 'N/A' %></p>
            <p><strong>Email Id:</strong> <%= current_admin ? current_admin.email : 'N/A' %></p>
          </div>
          <button class="edit-btn1" id="editProfileBtn">✎ Edit</button>

          <form id="profileEditForm" action="/admin/edit_profile" method="POST" style="display:none; margin-top: 10px;">
            <label for="username">Name:</label>
            <input type="text" id="username" name="username" value="<%= current_admin ? current_admin.username : '' %>" required />
            <label for="email">Email Id:</label>
            <input type="email" id="email" name="email" value="<%= current_admin ? current_admin.email : '' %>" required />
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="New Password (leave blank to keep current)" />
            <button type="submit">Save</button>
            <button type="button" id="cancelEditBtn">Cancel</button>
          </form>
        </div>
      </section>

      <section class="add-restaurant-form">
        <h2>ADD RESTAURANT</h2>
        <form action="/admin/add_restaurant" method="POST">
          <div class="owner-title">Restaurant Name</div>
          <input
            type="text"
            name="name"
            placeholder="Restaurant Name"
            required
          />
          <div class="owner-title">Location</div>
          <input type="text" name="location" placeholder="Location" required />
          <div class="owner-title">Payment</div>
          <input type="number" name="amount" placeholder="Payment" required />
          <div class="owner-title">Owner Username</div>
          <input type="text" name="owner_username" placeholder="Owner Username" required />
          <div class="owner-title">Owner Password</div>
          <input type="password" name="owner_password" placeholder="Owner Password" required />
          <div class="owner-title">Date Joined</div>
          <input type="date" name="date" required />
          <button type="submit">Submit</button>
        </form>
      </section>

      <section class="restaurant-list" id="restlist">
        <div class="restaurent-heading">
          <h2>Restaurants</h2>
        </div>
        <% restaurants_list.forEach(restaurant => { %>
        <div class="restaurant-card">
          <form action="/admin/edit_restaurant/<%= restaurant._id %>" method="POST" class="restaurant-info">
            <div class="restaurant-column">
              <label>Restaurant Name:</label>
              <input type="text" name="name" value="<%= restaurant.name %>" required />
              <label>Location:</label>
              <input type="text" name="location" value="<%= restaurant.location %>" required />
              <label>Payment:</label>
              <input type="number" name="amount" value="<%= restaurant.amount %>" required />
              <label>Date Joined:</label>
              <input type="date" name="date" value="<%= restaurant.date.toISOString().split('T')[0] %>" required />
            </div>
            <div class="restaurant-column">
              <button type="submit" class="edit-btn">Save</button>
          </form>
          <form action="/admin/delete_restaurant/<%= restaurant._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this restaurant?');">
              <button type="submit" class="delete-btn">Delete</button>
          </form>
            </div>
        </div>
        <% }) %>
      </section>

      <section class="statistics" id="stats">
        <h2>Statistics</h2>
        <div>
          <div class="stat-box orange">
            <p>Total Users</p>
            <h1 id="totalUsersCount"><%= total_user_count %></h1>
          </div>
          <div class="stat-box orange">
            <p>Total Restaurants</p>
            <h1 id="totalRestaurantsCount"><%= restaurants_list.length %></h1>
          </div>
        </div>
      </section>

      <section class="revenue" id="revenue">
        <h2>Revenue</h2>
        <div class="revenue-container">
          <div class="revenue-card">
            <h3>Current Month Revenue</h3>
            <div class="revenue-value"><span class="trend-up">▲</span> <%= totalRevenue %></div>
          </div>
        </div>
      </section>


      <section class="user-list" id="userlist">
        <div class="user-heading">
          <h2>Users</h2>
        </div>
        <% if (users_list && users_list.length > 0) { %>
          <% users_list.forEach(user => { %>
            <div class="user-card">
              <form action="/admin/edit_user/<%= user._id %>" method="POST" class="user-info">
                <div class="user-column">
                  <label>Username:</label>
                  <input type="text" name="username" value="<%= user.username %>" required />
                  <label>Role:</label>
                  <input type="text" name="role" value="<%= user.role %>" required />
                  <% if (user.role !== 'customer') { %>
                    <label>Restaurant Name:</label>
                    <input type="text" name="restaurantName" value="<%= user.restaurantName || '' %>" />
                  <% } %>
                  <label>Password:</label>
                  <input type="password" name="password" placeholder="New Password (leave blank to keep current)" />
                </div>
                <div class="user-column">
                  <button type="submit" class="edit-btn">Save</button>
              </form>
              <form action="/admin/delete_user/<%= user._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                  <button type="submit" class="delete-btn">Delete</button>
              </form>
                </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>No users found.</p>
        <% } %>
      </section>
      


    </main>

    <script src="/js/admin_dash_script.js"></script>
  </body>
</html>
