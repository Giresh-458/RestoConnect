<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resto Connect</title>
    <link rel="stylesheet" href="/css/home_page_styles.css">


    <style>
        .none{
            display: none;
        }

    </style>

</head>
<body>
    <nav class="nav-bar">
        <div class="logo">Resto <span>Connect</span></div>
        <ul class="nav-links">
            <% if(login) {%>
                <% if (user === 'customer') { %>
                    <li><a href="/customer/customerDashboard">Dashboard</a></li>
                <% } else if (user === 'staff') { %>
                    <li><a href="/staff/dashboard">Dashboard</a></li>
                <% } else if (user === 'admin') { %>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                <% } else if (user === 'owner') { %>
                    <li><a href="/owner/dashboard">Dashboard</a></li>
                <% } %> 
        

                <li><a href="/logout">logout</a></li>             
            <% } else {%>

            <li><a href="/LoginPage">Login/Register</a></li>
            <% } %>
            
            <li><a href="#">Cart</a></li>
        </ul>
        <div class="menu-toggle">&#9776;</div>
    </nav>
    
    <section class="hero">
        <h1>Resto <span>Connect</span></h1>
        <p>Discover the best food & dining experiences</p>
        
        <div class="search-bar">
                <form action="/" method="get">
            <select class="location-dropdown" name="city_option_home">
                <option>Tirupati</option>
                <option>Chennai</option>
                <option>Hyderabad</option>
            </select>
            <input type="text" placeholder="Search for restaurant, cuisine, or dish" name="name_resaurent" required>
            <button>Search</button>
                </form>
        </div>

          

    </section>
    
    <section class="restaurants">
      
        <% if(arr.length !=0) { %>
        <% arr.forEach(function(restaurant) { %>
            <a href="/menu/<%= restaurant.name %>">
            <div class="restaurant">
              <img src="<%=restaurant.image %>" alt="<%= restaurant.name %>">
              <p><%= restaurant.name %></p>
              <p>Rating: <%= restaurant.rating %> ‚≠ê</p>
            </div>
        </a>
          <% }); %>
          <% } %>

          
    
        
       
    </section>
    
    <footer>
        <p>&copy; 2025 Resto Connect. All rights reserved.</p>
    </footer>
    
    <script>
        document.querySelector(".menu-toggle").addEventListener("click", function() {
            document.querySelector(".nav-links").classList.toggle("active");
        });
    </script>
</body>
</html>