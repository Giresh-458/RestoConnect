<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu Management</title>
    <link rel="stylesheet" href="/css/menuManagement.css" />
  </head>
  <body>

    <header>
      <button id="backButton" onclick="window.history.back()">Back</button>
      <h1>Menu Management</h1>
    </header>
    <div class="container">
      <button class="add-button" onclick="document.getElementById('formContainer').style.display='flex'">Add New Item</button>

      <div class="form-container" id="formContainer" style="display:none;">
        <form action="/owner/menuManagement/add" method="POST" id="addForm">
          <input type="text" name="name" id="itemName" placeholder="Item Name" required />
          <input type="text" name="category" id="category" placeholder="Category" required />
          <input type="number" name="price" id="price" placeholder="Price" step="0.01" required />

          <select name="status" id="status" required>
            <option value="Available">Available</option>
            <option value="Out of Stock">Out of Stock</option>
            <option value="Coming Soon">Coming Soon</option>
          </select>
          <textarea name="description" id="description" placeholder="Description" required></textarea>
          <input type="text" name="imageUrl" id="imageUrl" placeholder="Image URL" />
          <button type="submit" class="submit-button">Submit</button>
          <button type="button" onclick="document.getElementById('formContainer').style.display='none'">Cancel</button>
        </form>
      </div>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="menuTable">
          <% products.forEach(function(product) { %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.category || 'N/A' %></td>
              <td>$<%= product.price.toFixed(2) %></td>
              <td><%= product.description %></td>
              <td class="status <%= product.status ? 'status-' + product.status.toLowerCase().replace(/\s/g, '') : '' %>"><%= product.status || 'Available' %></td>
              <td class="actions">
                <form action="/owner/menuManagement/edit/<%= product._id %>" method="POST" style="display:inline;">
                  <input type="hidden" name="name" value="<%= product.name %>" />
                  <input type="hidden" name="category" value="<%= product.category || '' %>" />
                  <input type="hidden" name="price" value="<%= product.price %>" />
                  <input type="hidden" name="status" value="<%= product.status || 'Available' %>" />
                  <input type="hidden" name="imageUrl" value="<%= product.image || '' %>" />
                  <button type="submit" class="edit">Edit</button>
                </form>
                <form action="/owner/menuManagement/delete/<%= product._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                  <button type="submit" class="delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

  </body>
</html>
