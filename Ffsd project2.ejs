<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Feedback</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .rating-container, .feedback-container {
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-left: 75px;
            margin-bottom: 30px;
            width: 350px;
        }
        .stars {
            display: flex;  
        }
        .star {
            font-size: 24px;
            cursor: pointer;
            color: gray;
        }
        .star.selected {
            color: orange;
        }
        .tags {
            display: flex;
            flex-wrap: wrap;
        }
        .tag {
            background: #eee;
            padding: 5px 10px;
            border-radius: 15px;
            margin: 5px;
            cursor: pointer;
        }
        .tag.selected {
            background: #ffcc00;
        }

        #feedbackInput {
            border: none;
            border-bottom: 2px solid black;
            outline: none;
            margin-bottom: 20px;
        }

        .title {
            text-align: center;
            margin-bottom: 30px;
        }

        .container {
            display: flex;
            gap: 50px;
        }

        .order-rating-container {
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 350px;
        }
        .order-details {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }
        #orderRatingText, #diningRatingText {
            font-size: 16px;
            margin-top: 5px;
            font-weight: bold;
        }

        .submit-btn {
            display: block;
            width: 350px;
            margin-left: 75px;
            padding: 10px;
            background-color: orange;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            margin-top: 20px;
        }
        
        .submit-btn:hover {
            background-color: darkorange;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                align-items: center;
                gap: 20px; 
            }
        
            .rating-container,
            .feedback-container,
            .order-rating-container {
                width: 90%; 
                margin-left: auto;
                margin-right: auto;
            }
        
            .submit-btn {
                width: 90%;
                margin-left: auto;
                margin-right: auto;
            }
        }
    </style>
</head>
<body>

    <h1 class="title">Restaurant Feedback</h1>

    <div class="rating-container">
        <p>Rate your experience for dining</p>
        
        <div class="stars" id="starRating">
            <span class="star" data-value="1">&#9733;</span>
            <span class="star" data-value="2">&#9733;</span>
            <span class="star" data-value="3">&#9733;</span>
            <span class="star" data-value="4">&#9733;</span>
            <span class="star" data-value="5">&#9733;</span>
        </div>
        <p id="diningRatingText">Good</p>
    </div>

    <div class="container">
        <div class="feedback-container">
            <p>What all did you love? üòç</p>
            <input type="text" id="feedbackInput" placeholder="Enter your feedback here...">
            <div class="tags">
                <span class="tag">Cappuccino</span>
                <span class="tag">Iced Peach Tea</span>
                <span class="tag">Soft Music</span>
                <span class="tag">Polite Staff</span>
                <span class="tag">Iced Latte</span>
            </div>
        </div>

        <div class="order-rating-container">
            <h3>Choose the order you wish to rate</h3>
            <p class="order-details">2 HOURS AGO</p>
            <p class="order-details">Chicken Nuggets, Chicken & Cheese Toast, Coffee</p>
            
            <p>Please rate your order experience</p>
            <div class="stars" id="orderStarRating">
                <span class="star" data-value="1">&#9733;</span>
                <span class="star" data-value="2">&#9733;</span>
                <span class="star" data-value="3">&#9733;</span>
                <span class="star" data-value="4">&#9733;</span>
                <span class="star" data-value="5">&#9733;</span>
            </div>
            <p id="orderRatingText">Very Good</p>
        </div>
    </div>

    
    <form id="feedbackForm">
        <div class="feedback-container">
            <p>Tell us what you liked...</p>
            <textarea id="feedbackInputExtra" name="feedback" placeholder="Your word makes Swiggy a better place. You are the influence!" rows="10" cols="30"></textarea>
        </div>

        <button class="submit-btn" type="submit">SUBMIT YOUR FEEDBACK</button>
    </form>

    <script>
        function setupStarRating(starContainerId, ratingTextId) {
            const stars = document.querySelectorAll(#${starContainerId} .star);
            const ratingText = document.getElementById(ratingTextId);

            stars.forEach(star => {
                star.addEventListener('click', function() {
                    let rating = this.getAttribute('data-value');
                    stars.forEach(s => s.classList.remove('selected'));
                    for (let i = 0; i < rating; i++) {
                        stars[i].classList.add('selected');
                    }
                    ratingText.textContent = ['Poor', 'Fair', 'Good', 'Very Good', 'Excellent'][rating - 1];
                });
            });
        }

        
        setupStarRating('starRating', 'diningRatingText');
        setupStarRating('orderStarRating', 'orderRatingText');

        
        document.querySelectorAll('.tag').forEach(tag => {
            tag.addEventListener('click', function() {
                this.classList.toggle('selected');
            });
        });

        
        document.getElementById('feedbackForm').addEventListener('submit', function(event) {
            event.preventDefault();  

            const extraFeedback = document.getElementById('feedbackInputExtra').value;

            if (extraFeedback.trim() !== '') {
                alert('Feedback submitted successfully!');
                document.getElementById('feedbackInputExtra').value = '';  
            } else {
                alert('Please enter feedback before submitting!');
            }

        });

    </script>

</body>
</html>